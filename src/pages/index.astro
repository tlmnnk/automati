---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, MAIN_PAGE_SLOTS } from '../consts';
---

<style>
  .welcome {
    margin-inline: auto;
    width: max(100% - 15rem,1280px);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .welcome-text {
    margin: auto;
    width: 80ch;
  }

  .welcome-text h5 {
    margin-top: 24px;
    margin-left: 48px;
  }

  .welcome-play {
    margin-top: 44px;
    margin-inline: auto;
    width: max-content;
    display: block;
  }

  .slots {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
  }

  .slots-header {
    display: flex;
    justify-content: space-between;
  }

  .slots-subtitle {
    margin-top: 24px;
  }

  .slots-list {
    margin-top: 24px;
    display: flex;
    gap: 22px;
  }

  .slots-list-item {
    display: flex;
    flex-direction: column;
    row-gap: 14px;
    text-align: center;
  }

  .slots-play {
    width: fit-content;
    align-self: center;
  }
</style>

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <div class="full-height">
      <Header title={SITE_TITLE} />

    <div class="welcome">
